@model SimuladorGerenciaMemoria.Models.Memory

@{
    ViewData["Title"] = "Detalhes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalhes da memória</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SimulationID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Simulation.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Size)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Size)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FramesQTD)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FramesQTD)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FramesSize)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FramesSize)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsGeneratedProcessList)
        </dt>
        <dd class="col-sm-10">
            @if (Model.IsGeneratedProcessList)
            {
                @Html.DisplayText("Sim") 
            }
            else
            { 
                @Html.DisplayText("Não")
            }
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreateDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreateDate)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-info" asp-action="Edit" asp-route-id="@Model.ID">Gerar Processos</a> |
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.ID">Quick-fit</a> |
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.ID">First-fit</a> |
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.ID">Best-fit</a> |
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.ID">Worst-fit</a> |
    <a class="btn btn-info" asp-action="Edit" asp-route-id="@Model.ID">Editar</a> |
    <a class="btn btn-info" asp-action="Index">Voltar para a lista</a>
</div>

<br />

<div class="panel">
    <div class="panel-heading">
        <h3 class="text-success">Lista de processos inseridos na memória</h3>
    </div>
    <div class="panel-body">
        <div class="table">
            <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-dark" id="tableDados">
                <thead>
                    <tr>
                        <th>
                            Nome
                        </th>
                        <th>
                            Registrador Base
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model.Frames)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RegB)
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="panel">
    <div class="panel-heading">
        <h3 class="text-danger">Lista de processos para inserir na memória</h3>
    </div>
    <div class="panel-body">
        <div class="table">
            <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-dark" id="tableDados2">
                <thead>
                    <tr>
                        <th>
                            Nome
                        </th>
                        <th>
                            Tamanho
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Processes != null)
                    {
                        foreach (var item in Model.Processes)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Size)
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<link rel="stylesheet" href="~/css/datatables.min.css" />
<script src="~/js/datatables.min.js"></script>

<script>
    $('#tableDados, #tableDados2').dataTable({
        responsive: true,
        "oLanguage": {
            "sProcessing": "Processando...",
            "sLengthMenu": "Mostrar _MENU_ registros",
            "sZeroRecords": "Não foram encontrados resultados",
            "sInfo": "Mostrando de _START_ até _END_ de _TOTAL_ registros",
            "sInfoEmpty": "Mostrando de 0 até 0 de 0 registros",
            "sInfoFiltered": "",
            "sInfoPostFix": "",
            "sSearch": "Buscar : ",
            "sUrl": "",
            "oPaginate": {
                "sFirst": "Primeiro",
                "sPrevious": "Anterior",
                "sNext": "Seguinte",
                "sLast": "Último"
            }
        }
    });
</script>