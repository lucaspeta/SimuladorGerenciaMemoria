@model SimuladorGerenciaMemoria.Models.Simulation

@{
    ViewData["Title"] = "Detalhes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1><i class="fa fa-microchip" aria-hidden="true"></i> Detalhes Simulação</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreateDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreateDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Login)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-info" asp-action="Edit" asp-route-id="@Model.ID">Editar</a> |
    <a class="btn btn-info" asp-action="Index">Voltar para a lista</a>
</div>
<br />
<div class="panel">
    <div class="panel-heading">
        <h3>Lista de Memórias relacionadas</h3>
    </div>
    <div class="panel-body">
        <div class="table">
            <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-dark" id="tableDados">
                <thead>
                    <tr>
                        <th>
                            Nome
                        </th>
                        <th>
                            Tamanho
                        </th>
                        <th>
                            Tamanho do frame
                        </th>
                        <th>
                            Quantidade de frames
                        </th>
                        <th>
                            Data de criação
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Memories != null)
                    {
                        foreach (var item in Model.Memories)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Size)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FramesSize)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FramesQTD)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreateDate)
                                </td>
                                <td>
                                    <a asp-controller="Memories" asp-action="Details" asp-route-id="@item.ID">Visualizar</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<link rel="stylesheet" href="~/css/datatables.min.css" />
<script src="~/js/datatables.min.js"></script>

<script>
    $('#tableDados').dataTable({
        responsive: true,
        "oLanguage": {
            "sProcessing": "Processando...",
            "sLengthMenu": "Mostrar _MENU_ registros",
            "sZeroRecords": "Não foram encontrados resultados",
            "sInfo": "Mostrando de _START_ até _END_ de _TOTAL_ registros",
            "sInfoEmpty": "Mostrando de 0 até 0 de 0 registros",
            "sInfoFiltered": "",
            "sInfoPostFix": "",
            "sSearch": "Buscar : ",
            "sUrl": "",
            "oPaginate": {
                "sFirst": "Primeiro",
                "sPrevious": "Anterior",
                "sNext": "Seguinte",
                "sLast": "Último"
            }
        }
    });
</script>
